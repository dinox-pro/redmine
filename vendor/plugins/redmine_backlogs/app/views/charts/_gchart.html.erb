<script type="text/javascript">
//<![CDATA[
  function regenerate_<%= params[:backlog_id] %>(e){
    RBL.Backlog.findByID(<%= params[:backlog_id] %>).getChart();
    e.preventDefault();
  }

  $('regenerate_chart_<%= params[:backlog_id] %>').observe('click', regenerate_<%= params[:backlog_id] %>);
//]]>
</script>