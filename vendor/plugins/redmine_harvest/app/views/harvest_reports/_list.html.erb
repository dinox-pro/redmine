<table class="list time-entries">
<thead>
<tr>
<%= sort_header_tag('spent_at', :caption => l(:label_date), :default_order => 'desc') %>
<%= sort_header_tag('user_id', :caption => l(:label_member)) %>
<%= sort_header_tag('project_id', :caption => l(:label_project)) %>
<%= sort_header_tag('issue_id', :caption => l(:label_issue), :default_order => 'desc') %>
<th><%= l(:field_comments) %></th>
<%= sort_header_tag('hours', :caption => l(:field_hours)) %>
<th></th>
</tr>
</thead>
<tbody>
<% entries.each do |entry| -%>
<tr class="time-entry <%= cycle("odd", "even") %>">
<td class="spent_on"><%= format_date(entry.spent_at) %></td>
<td class="user"><%=h entry.user_id %></td>
<td class="project"><%=h entry.project_id %></td>
<td class="subject">
<% if entry.issue_id -%>
<%= link_to_issue entry.issue_id %>: <%= h(truncate(entry.issue.subject, :length => 50)) -%>
<% end -%>
</td>
<td class="comments"><%=h entry.notes %></td>
<td class="hours"><%= html_hours("%.2f" % entry.hours) %></td>
</tr>
<% end -%>
</tbody>
</table>
