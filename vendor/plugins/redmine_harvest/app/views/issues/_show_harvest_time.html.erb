<% harvest_time = HarvestTime.sum(:hours, :conditions => {:issue_id => @issue.id}).to_f %>
<tr>
  <% if User.current.allowed_to?(:view_time_entries, @project) %>
    <th class="spent-time">Harvest time:</th>
    <td class="spent-hours"><%= harvest_time > 0 ? (link_to l_hours(harvest_time), {:controller => 'harvest_reports', :project_id => @project, :issue_id => @issue}) : "-" %></td>
  <% end %>
</tr>